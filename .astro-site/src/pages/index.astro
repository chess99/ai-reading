---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { parseBookInfo } from '../utils/bookParser';

// Ëé∑Âèñ base path
const base = import.meta.env.BASE_URL;

// Ëé∑ÂèñÊâÄÊúâ‰π¶Á±ç
const allBooks = await getCollection('books');

// Ëß£Êûê‰π¶Á±ç‰ø°ÊÅØÂπ∂ÊåâÂàÜÁ±ªÂàÜÁªÑ
const booksByCategory = allBooks.reduce((acc, book) => {
  // ‰ªé filePath ‰∏≠ÊèêÂèñÁõ∏ÂØπË∑ØÂæÑ
  const relativePath = (book.filePath || book.id).replace(/^\.\.\/books\//, '');
  const info = parseBookInfo(relativePath);
  if (!acc[info.category]) {
    acc[info.category] = [];
  }
  acc[info.category].push({ ...book, info });
  return acc;
}, {} as Record<string, Array<typeof allBooks[0] & { info: ReturnType<typeof parseBookInfo> }>>);

// Ëé∑ÂèñÂàÜÁ±ªÂàóË°®Âπ∂ÊéíÂ∫è
const categories = Object.keys(booksByCategory).sort((a, b) =>
  a.localeCompare(b, 'zh-CN')
);

// ÁîüÊàêÈöèÊú∫‰π¶Á±çË∑ØÂæÑ
const randomBook = allBooks[Math.floor(Math.random() * allBooks.length)];
// ‰ºòÂÖà‰ΩøÁî® book.data.slugÔºåÂõûÈÄÄÂà∞ book.id
const randomBookSlug = randomBook.data.slug || randomBook.id.replace(/\.md$/, '');
const randomBookPath = `${base}/books/${randomBookSlug}`;
---

<BaseLayout title="AI ÈòÖËØª - È¶ñÈ°µ">
  <div class="container">
    <!-- ÊêúÁ¥¢Ê†è -->
    <div class="search-bar">
      <div class="search-input-wrapper">
        <input
          type="text"
          id="search-input"
          class="search-input"
          placeholder="ÊêúÁ¥¢‰π¶Á±çÊ†áÈ¢ò„ÄÅ‰ΩúËÄÖ..."
        />
        <span class="search-icon">üîç</span>
      </div>
      <a href={`${base}/search`} class="search-btn" title="ÂÖ®ÊñáÊêúÁ¥¢">
        <span class="icon">üîç</span>
        <span class="text">ÂÖ®ÊñáÊêúÁ¥¢</span>
      </a>
      <a href={randomBookPath} class="random-btn" title="ÈöèÊú∫‰∏ÄÊú¨‰π¶">
        <span class="icon">üé≤</span>
        <span class="text">ÈöèÊú∫‰∏ÄÊú¨</span>
      </a>
    </div>

    <!-- ÁªüËÆ°‰ø°ÊÅØ -->
    <div class="stats">
      <div class="stat-item">
        <span class="stat-number">{allBooks.length}</span>
        <span class="stat-label">Êú¨‰π¶Á±ç</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">{categories.length}</span>
        <span class="stat-label">‰∏™ÂàÜÁ±ª</span>
      </div>
    </div>

    <!-- ÂàÜÁ±ªÂç°Áâá -->
    <div class="categories-section">
      {categories.map((category) => (
        <a href={`${base}/category/${encodeURIComponent(category)}`} class="category-card" data-category={category}>
          <div class="category-icon">üìö</div>
          <h3 class="category-name">{category}</h3>
          <p class="category-count">{booksByCategory[category].length} Êú¨‰π¶Á±ç</p>
        </a>
      ))}
    </div>

    <!-- ÊêúÁ¥¢ÁªìÊûú -->
    <div class="search-results" style="display: none;">
      <div class="results-header">
        <h2 class="results-title">ÊêúÁ¥¢ÁªìÊûú</h2>
        <div class="results-actions">
          <span class="results-count"></span>
          <button class="clear-search">Ê∏ÖÈô§ÊêúÁ¥¢</button>
        </div>
      </div>
      <div class="results-list"></div>
      <div class="no-results" style="display: none;">
        <p>Êú™ÊâæÂà∞ÂåπÈÖçÁöÑ‰π¶Á±ç</p>
      </div>
    </div>
  </div>

  <!-- Â∞ÜÊâÄÊúâ‰π¶Á±çÊï∞ÊçÆ‰º†ÈÄíÁªôÂÆ¢Êà∑Á´Ø -->
  <script define:vars={{
    allBooks: allBooks.map(book => {
      // ‰ªé filePath ‰∏≠ÊèêÂèñÁõ∏ÂØπË∑ØÂæÑ
      const relativePath = (book.filePath || book.id).replace(/^\.\.\/books\//, '');
      const info = parseBookInfo(relativePath);
      return {
        id: book.data.slug || book.id.replace(/\.md$/, ''),  // ‰ºòÂÖà‰ΩøÁî® slug
        title: info.title,
        author: info.author,
        category: info.category,
        tags: book.data.tags || []
      };
    }),
    baseUrl: base
  }}>
    window.__BOOKS_DATA__ = allBooks;
    window.__BASE_URL__ = baseUrl;
  </script>

  <style is:global>
    .search-bar {
      display: flex;
      gap: 16px;
      margin-bottom: 48px;
    }

    .search-input-wrapper {
      flex: 1;
      position: relative;
    }

    .search-input {
      width: 100%;
      padding: 14px 28px 14px 50px;
      border: 2px solid var(--color-brand);
      border-radius: var(--radius);
      font-size: 16px;
      font-weight: 500;
      transition: all 0.2s;
      outline: none;
      height: 56px;
      box-sizing: border-box;
    }

    .search-input:focus {
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
    }

    .search-icon {
      position: absolute;
      left: 18px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 20px;
      pointer-events: none;
      line-height: 1;
      display: flex;
      align-items: center;
    }

    .search-btn,
    .random-btn {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 28px;
      border: 2px solid var(--color-brand);
      border-radius: var(--radius);
      background: var(--color-bg);
      color: var(--color-text);
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.2s;
      white-space: nowrap;
      height: 56px;
      box-sizing: border-box;
    }

    .search-btn:hover,
    .random-btn:hover {
      background: var(--color-brand);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
    }

    .search-btn .icon,
    .random-btn .icon {
      font-size: 20px;
    }

    .stats {
      display: flex;
      gap: 24px;
      margin-bottom: 48px;
      justify-content: center;
      transition: opacity 0.3s, height 0.3s;
    }

    .stats.hidden {
      opacity: 0;
      height: 0;
      margin: 0;
      overflow: hidden;
    }

    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 24px 48px;
      background: var(--color-bg-soft);
      border-radius: var(--radius);
      border: 1px solid var(--color-border);
    }

    .stat-number {
      font-size: 36px;
      font-weight: 700;
      background: linear-gradient(135deg, var(--color-brand) 0%, var(--color-brand-dark) 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .stat-label {
      font-size: 14px;
      color: var(--color-text-light);
      margin-top: 4px;
    }

    .categories-section {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
    }

    .category-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 32px 20px;
      background: var(--color-bg-soft);
      border: 2px solid var(--color-border);
      border-radius: 16px;
      text-decoration: none;
      transition: all 0.3s;
      cursor: pointer;
    }

    .category-card:hover {
      border-color: var(--color-brand);
      background: rgba(102, 126, 234, 0.05);
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    }

    .category-icon {
      font-size: 48px;
      margin-bottom: 16px;
      filter: grayscale(0.3);
      transition: all 0.3s;
    }

    .category-card:hover .category-icon {
      filter: grayscale(0);
      transform: scale(1.1);
    }

    .category-name {
      font-size: 18px;
      font-weight: 700;
      color: var(--color-text);
      margin: 0 0 8px 0;
      text-align: center;
    }

    .category-count {
      font-size: 14px;
      color: var(--color-text-light);
      margin: 0;
    }

    .search-results {
      margin-top: 48px;
    }

    .results-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 32px;
    }

    .results-title {
      font-size: 28px;
      font-weight: 700;
      color: var(--color-text);
      margin: 0;
    }

    .results-actions {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .results-count {
      font-size: 14px;
      color: var(--color-text-light);
    }

    .clear-search {
      padding: 8px 16px;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      background: var(--color-bg);
      color: var(--color-text);
      font-size: 14px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .clear-search:hover {
      border-color: var(--color-brand);
      color: var(--color-brand);
    }

    .results-list {
      display: flex;
      flex-direction: column;
      gap: 16px;
      max-width: 900px;
      margin: 0 auto;
    }

    .book-result {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px 24px;
      background: var(--color-bg-soft);
      border: 1px solid var(--color-border);
      border-radius: var(--radius);
      text-decoration: none;
      transition: all 0.2s;
    }

    .book-result:hover {
      border-color: var(--color-brand);
      background: rgba(102, 126, 234, 0.05);
      transform: translateX(4px);
      box-shadow: var(--shadow-md);
    }

    .book-info {
      flex: 1;
    }

    .book-title {
      font-size: 18px;
      font-weight: 600;
      color: var(--color-text);
      margin: 0 0 8px 0;
    }

    .book-author {
      font-size: 14px;
      color: var(--color-text-light);
      margin: 0 0 8px 0;
    }

    .book-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .tag {
      padding: 4px 12px;
      background: white;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      font-size: 12px;
      color: var(--color-text-light);
    }

    .book-arrow {
      font-size: 24px;
      color: var(--color-brand);
      opacity: 0;
      transform: translateX(-10px);
      transition: all 0.2s;
    }

    .book-result:hover .book-arrow {
      opacity: 1;
      transform: translateX(0);
    }

    .no-results {
      text-align: center;
      padding: 64px 24px;
      color: var(--color-text-light);
    }

    .no-results p {
      font-size: 16px;
      margin: 0;
    }

    @media (max-width: 768px) {
      .search-bar {
        flex-wrap: wrap;
      }

      .search-input-wrapper {
        flex: 1 1 100%;
      }

      .search-btn,
      .random-btn {
        flex: 1;
      }

      .results-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
      }

      .results-title {
        font-size: 24px;
      }

      .book-result {
        padding: 16px 20px;
      }

      .book-arrow {
        display: none;
      }


      .stats {
        flex-direction: column;
        gap: 16px;
      }

      .stat-item {
        padding: 16px 32px;
      }

      .categories-section {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 16px;
      }

      .category-card {
        padding: 24px 16px;
      }

      .category-icon {
        font-size: 36px;
      }
    }
  </style>

  <script>
    // ÂÆ¢Êà∑Á´ØÊêúÁ¥¢ÂäüËÉΩ
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const statsSection = document.querySelector('.stats') as HTMLElement;
    const categoriesSection = document.querySelector('.categories-section') as HTMLElement;
    const searchResults = document.querySelector('.search-results') as HTMLElement;
    const resultsList = document.querySelector('.results-list') as HTMLElement;
    const noResults = document.querySelector('.no-results') as HTMLElement;
    const clearSearchBtn = document.querySelector('.clear-search') as HTMLButtonElement;

    // Ëé∑ÂèñÊâÄÊúâ‰π¶Á±çÊï∞ÊçÆÂíå base URL
    const booksData = (window as any).__BOOKS_DATA__ || [];
    const baseUrl = (window as any).__BASE_URL__ || '/';

    function clearSearch() {
      searchInput.value = '';
      statsSection.classList.remove('hidden');
      categoriesSection.style.display = 'grid';
      searchResults.style.display = 'none';
      resultsList.innerHTML = '';
      noResults.style.display = 'none';
    }

    function performSearch(query: string) {
      const lowerQuery = query.toLowerCase().trim();

      if (!lowerQuery) {
        clearSearch();
        return;
      }

      // ÊêúÁ¥¢‰π¶Á±ç
      const results = booksData.filter((book: any) => {
        const titleMatch = book.title?.toLowerCase().includes(lowerQuery);
        const authorMatch = book.author?.toLowerCase().includes(lowerQuery);
        const categoryMatch = book.category?.toLowerCase().includes(lowerQuery);
        const tagsMatch = book.tags?.some((tag: string) => tag.toLowerCase().includes(lowerQuery));
        return titleMatch || authorMatch || categoryMatch || tagsMatch;
      });

      // ÈöêËóèÁªüËÆ°ÂíåÂàÜÁ±ªÔºåÊòæÁ§∫ÊêúÁ¥¢ÁªìÊûú
      statsSection.classList.add('hidden');
      categoriesSection.style.display = 'none';
      searchResults.style.display = 'block';

      // Êõ¥Êñ∞ÁªìÊûúËÆ°Êï∞
      const resultsCount = document.querySelector('.results-count') as HTMLElement;
      if (resultsCount) {
        resultsCount.textContent = `ÂÖ± ${results.length} Êú¨‰π¶Á±ç`;
      }

      if (results.length === 0) {
        resultsList.innerHTML = '';
        noResults.style.display = 'block';
      } else {
        noResults.style.display = 'none';
        resultsList.innerHTML = results.map((book: any) => `
          <a href="${baseUrl}/books/${book.id}" class="book-result">
            <div class="book-info">
              <h3 class="book-title">${book.title}</h3>
              ${book.author ? `<p class="book-author">${book.author}</p>` : ''}
              <div class="book-tags">
                <span class="tag">${book.category}</span>
                ${book.tags && book.tags.length > 0 ? book.tags.map((tag: string) => `<span class="tag">${tag}</span>`).join('') : ''}
              </div>
            </div>
            <div class="book-arrow">‚Üí</div>
          </a>
        `).join('');
      }
    }

    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value;
        performSearch(query);
      });
    }

    if (clearSearchBtn) {
      clearSearchBtn.addEventListener('click', clearSearch);
    }
  </script>
</BaseLayout>
