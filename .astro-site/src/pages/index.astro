      pointer-events: none;
    }

    .random-btn {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 28px;
      border: 2px solid var(--color-brand);
      border-radius: var(--radius);
      background: var(--color-bg);
      color: var(--color-text);
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.2s;
