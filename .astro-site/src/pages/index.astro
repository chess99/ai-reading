  </style>

  <script>
    // å®¢æˆ·ç«¯æœç´¢åŠŸèƒ½
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const statsSection = document.querySelector('.stats') as HTMLElement;
    const categoriesSection = document.querySelector('.categories-section') as HTMLElement;
    const searchResults = document.querySelector('.search-results') as HTMLElement;
    const resultsList = document.querySelector('.results-list') as HTMLElement;
    const noResults = document.querySelector('.no-results') as HTMLElement;
    const clearSearchBtn = document.querySelector('.clear-search') as HTMLButtonElement;

    // è·å–æ‰€æœ‰ä¹¦ç±æ•°æ®
    const booksData = (window as any).__BOOKS_DATA__ || [];

    function clearSearch() {
      searchInput.value = '';
      statsSection.classList.remove('hidden');
      categoriesSection.style.display = 'grid';
      searchResults.style.display = 'none';
      resultsList.innerHTML = '';
      noResults.style.display = 'none';
    }

    function performSearch(query: string) {
      const lowerQuery = query.toLowerCase().trim();

      if (!lowerQuery) {
        clearSearch();
        return;
      }

      // æœç´¢ä¹¦ç±
      const results = booksData.filter((book: any) => {
        const titleMatch = book.title?.toLowerCase().includes(lowerQuery);
        const authorMatch = book.author?.toLowerCase().includes(lowerQuery);
        const categoryMatch = book.category?.toLowerCase().includes(lowerQuery);
        const tagsMatch = book.tags?.some((tag: string) => tag.toLowerCase().includes(lowerQuery));
        return titleMatch || authorMatch || categoryMatch || tagsMatch;
      });

      // éšè—ç»Ÿè®¡å’Œåˆ†ç±»ï¼Œæ˜¾ç¤ºæœç´¢ç»“æœ
      statsSection.classList.add('hidden');
      categoriesSection.style.display = 'none';
      searchResults.style.display = 'block';

      if (results.length === 0) {
        resultsList.innerHTML = '';
        noResults.style.display = 'block';
      } else {
        noResults.style.display = 'none';
        resultsList.innerHTML = results.map((book: any) => `
          <a href="/books/${book.id}" class="book-result">
            <div class="book-info">
              <h3 class="book-title">${book.title}</h3>
              <div class="book-meta">
                ${book.author ? `${book.author} Â· ` : ''}${book.category}
              </div>
            </div>
            <div class="book-arrow">â†’</div>
          </a>
        `).join('');
      }
    }

    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value;
        performSearch(query);
      });
    }

    if (clearSearchBtn) {
      clearSearchBtn.addEventListener('click', clearSearch);
    }
  </script>
</BaseLayout>
