---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const allBooks = await getCollection('books');

  // 按分类分组
  const booksByCategory = allBooks.reduce((acc, book) => {
    const category = book.id.split('/')[0];
    if (!acc[category]) {
      acc[category] = [];
    }
    acc[category].push(book);
    return acc;
  }, {} as Record<string, typeof allBooks>);

  // 为每个分类生成路径
  return Object.keys(booksByCategory).map((category) => ({
    params: { category },
    props: { books: booksByCategory[category] },
  }));
}

const { category } = Astro.params;
const { books } = Astro.props;

// 按标题排序
const sortedBooks = books.sort((a, b) =>
  a.data.title.localeCompare(b.data.title, 'zh-CN')
);
---

<BaseLayout title={`${category} - AI 阅读`}>
  <div class="container">
    <div class="category-header">
      <h1 class="category-title">{category}</h1>
      <p class="category-stats">共 {books.length} 本书籍</p>
    </div>

    <div class="books-list">
      {sortedBooks.map((book) => {
        // id 是 "投资/作者-书名.md"，需要去掉 .md 后缀
        const bookPath = `/books/${book.id.replace(/\.md$/, '')}`;
        return (
          <a href={bookPath} class="book-card">
            <div class="book-info">
              <h3 class="book-title">{book.data.title}</h3>
              {book.data.author && (
                <p class="book-author">{book.data.author}</p>
              )}
              {book.data.tags && book.data.tags.length > 0 && (
                <div class="book-tags">
                  {book.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
            <div class="book-arrow">→</div>
          </a>
        );
      })}
    </div>
  </div>

  <style>
    .category-header {
      margin-bottom: 48px;
      text-align: center;
    }

    .category-title {
      font-size: 40px;
      font-weight: 800;
      background: linear-gradient(135deg, var(--color-brand) 0%, var(--color-brand-dark) 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 12px;
    }

    .category-stats {
      font-size: 16px;
      color: var(--color-text-light);
    }

    .books-list {
      display: flex;
      flex-direction: column;
      gap: 16px;
      max-width: 900px;
      margin: 0 auto;
    }

    .book-card {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px 24px;
      background: var(--color-bg-soft);
      border: 1px solid var(--color-border);
      border-radius: var(--radius);
      text-decoration: none;
      transition: all 0.2s;
    }

    .book-card:hover {
      border-color: var(--color-brand);
      background: rgba(102, 126, 234, 0.05);
      transform: translateX(4px);
      box-shadow: var(--shadow-md);
    }

    .book-info {
      flex: 1;
    }

    .book-title {
      font-size: 18px;
      font-weight: 600;
      color: var(--color-text);
      margin: 0 0 8px 0;
    }

    .book-author {
      font-size: 14px;
      color: var(--color-text-light);
      margin: 0 0 8px 0;
    }

    .book-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .tag {
      padding: 4px 12px;
      background: white;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      font-size: 12px;
      color: var(--color-text-light);
    }

    .book-arrow {
      font-size: 24px;
      color: var(--color-brand);
      opacity: 0;
      transform: translateX(-10px);
      transition: all 0.2s;
    }

    .book-card:hover .book-arrow {
      opacity: 1;
      transform: translateX(0);
    }

    @media (max-width: 768px) {
      .category-title {
        font-size: 32px;
      }

      .book-card {
        padding: 16px 20px;
      }

      .book-arrow {
        display: none;
      }
    }
  </style>
</BaseLayout>
