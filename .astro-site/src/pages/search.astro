---
import BaseLayout from '../layouts/BaseLayout.astro';

// 获取 base path
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="全文搜索 - AI 阅读">
  <div class="container">
    <div class="search-page">
      <h1 class="page-title">全文搜索</h1>
      <p class="page-description">搜索书籍标题、作者、内容...</p>

      <div id="search"></div>
    </div>
  </div>

  <style>
    .search-page {
      max-width: 900px;
      margin: 0 auto;
    }

    .page-title {
      font-size: 40px;
      font-weight: 800;
      background: linear-gradient(135deg, var(--color-brand) 0%, var(--color-brand-dark) 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 12px;
    }

    .page-description {
      font-size: 16px;
      color: var(--color-text-light);
      margin-bottom: 32px;
    }

    #search {
      margin-top: 24px;
    }

    /* Pagefind 样式自定义 */
    :global(.pagefind-ui__search-input) {
      width: 100%;
      padding: 16px 24px;
      border: 2px solid var(--color-brand);
      border-radius: var(--radius);
      font-size: 16px;
      font-weight: 500;
      transition: all 0.2s;
      outline: none;
    }

    :global(.pagefind-ui__search-input:focus) {
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
    }

    :global(.pagefind-ui__result) {
      padding: 20px;
      background: var(--color-bg-soft);
      border: 1px solid var(--color-border);
      border-radius: var(--radius);
      margin-bottom: 16px;
      transition: all 0.2s;
    }

    :global(.pagefind-ui__result:hover) {
      border-color: var(--color-brand);
      background: rgba(102, 126, 234, 0.05);
      transform: translateX(4px);
      box-shadow: var(--shadow-md);
    }

    :global(.pagefind-ui__result-title) {
      font-size: 18px;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 8px;
    }

    :global(.pagefind-ui__result-excerpt) {
      font-size: 14px;
      color: var(--color-text-light);
      line-height: 1.6;
    }
  </style>

  <link href={`${base}/pagefind/pagefind-ui.css`} rel="stylesheet">
  <script src={`${base}/pagefind/pagefind-ui.js`}></script>
  <script define:vars={{ baseUrl: base }}>
    window.addEventListener('DOMContentLoaded', () => {
      if (typeof PagefindUI !== 'undefined') {
        new PagefindUI({
          element: "#search",
          showSubResults: true,
          baseUrl: baseUrl
        });
      } else {
        // Pagefind UI 未加载
        document.getElementById('search').innerHTML = `
          <div style="padding: 48px 24px; text-align: center; background: var(--color-bg-soft); border-radius: 12px; border: 2px dashed var(--color-border);">
            <p style="font-size: 16px; color: var(--color-text); margin: 0 0 12px 0; font-weight: 600;">⚠️ 搜索功能加载失败</p>
            <p style="font-size: 14px; color: var(--color-text-light); margin: 0;">请刷新页面重试，或使用首页的即时搜索功能</p>
          </div>
        `;
      }
    });
  </script>
</BaseLayout>
